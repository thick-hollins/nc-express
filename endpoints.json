{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "POST /api/topics": {
    "description": "adds a topic and serves it to the user",
    "queries": [],
    "exampleRequest": { 
          "slug": "cyclocross", 
          "description": "Belgian sports"
    },
    "exampleResponse": {
      "topic": { "slug": "cyclocross", "description": "Belgian sports" }
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341,
          "votes": 0,
          "comment_count": 5
        }
      ]
    }
  },
  "POST /api/articles": {
    "description": "adds an article and serves it to the user",
    "queries": [],
    "exampleResponse": {
      "article": {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341,
          "votes": 0
        }
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an single article object",
    "queries": [],
    "exampleResponse": {
      "article": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341,
          "votes": 0,
          "comment_count": 5
        }
      ]
    }
  },
  "DELETE /api/articles/:article_id": {
    "description": "deletes a single article",
    "queries": [],
    "exampleResponse": { "code" : 204 } 
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates an article's vote field or body and serves object",
    "queries": [],
    "exampleRequest": {
      "inc-votes": 1,
      "body": "It's article time!"
    },
    "exampleResponse": {
      "article": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "It's article time!",
          "created_at": 1527695953341,
          "votes": 1,
          "comment_count": 5
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments on one article",
    "queries": [],
    "exampleResponse": {
      "comments": [
        { 
          "article_id": 2, 
          "comment_id": 8, 
          "votes": 5, 
          "created_at": 1527695953341, 
          "author": "Northcoder1", 
          "body": "My Post!" 
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a comment and serves it back to the user",
    "queries": [],
    "exampleRequest": { 
          "author": "Northcoder1", 
          "body": "My Post!" 
    },
    "exampleResponse": {
      "comment": [
        { 
          "article_id": 2, 
          "comment_id": 8, 
          "votes": 5, 
          "created_at": 1527695953341, 
          "author": "Northcoder1", 
          "body": "My Post!" 
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id/comments": {
    "description": "updates a comment's vote field or body and serves comment to the user",
    "queries": [],
    "exampleRequest": { 
          "inc_votes": -1,
          "body": "Here is what I think..."
    },
    "exampleResponse": {
      "comment": [
        { 
          "article_id": 2, 
          "comment_id": 8, 
          "votes": 4, 
          "created_at": 1527695953341, 
          "author": "Northcoder1", 
          "body": "Here is what I think..." 
        }
      ]
    }
  },
  "DELETE /api/articles/:article_id/comments": {
    "description": "deletes a single comment",
    "queries": [],
    "exampleResponse": {
      "code": 204
    }
  },
